@{
    ViewData["Title"] = "Delete";
    MyProto.Book data = ViewBag.Data;
    MyProto.AuthorList AuthorData = ViewBag.AuthorData;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @data.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @data.Name
        </dd>
        <dt class="col-sm-2">
            Version
        </dt>
        <dd class="col-sm-10">
            @data.Version
        </dd>
        <dt class="col-sm-2">
            Pages
        </dt>
        <dd class="col-sm-10">
            @data.Page
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @data.Year
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">

            @{
                var author = AuthorData.Author.FirstOrDefault(a => a.AuthorId == data.AuthorId);
                string authorName = (author != null) ? author.AuthorName : "Not Found";
            }
            <p>Author: @authorName</p>

        </dd>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@data.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
 